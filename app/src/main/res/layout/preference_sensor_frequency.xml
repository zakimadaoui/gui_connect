<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/builder_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:elevation="1dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/widget_builder_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/assistant_semibold"
            android:padding="4dp"
            android:text="@string/frequency" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/widget_sampling_rate_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/card_bg_material_shadow"
                android:ems="10"
                android:fontFamily="@font/assistant"
                android:hint="100 000 (by default)"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/widget_sampling_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/assistant"
                android:padding="16sp"
                android:text="us"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</merge>