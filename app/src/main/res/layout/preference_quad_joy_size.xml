<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:id="@+id/preference_size_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="2dp"
    android:elevation="1dp"
    android:orientation="vertical"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/size_preference_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/assistant_semibold"
        android:padding="4dp"
        android:text="@string/size_label" />

    <RadioGroup
        android:id="@+id/quad_joy_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/joy_small_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/card_bg_material_shadow"
            android:fontFamily="@font/assistant"
            android:text="small" />

        <RadioButton
            android:id="@+id/joy_medium_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/card_bg_material_shadow"
            android:fontFamily="@font/assistant"
            android:text="medium" />
    </RadioGroup>

</LinearLayout>
</merge>