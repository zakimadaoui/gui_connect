<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/card_bg"
    android:elevation="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/project_title_txtvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:fontFamily="@font/assistant_bold"
        android:padding="8dp"
        android:text="LibraBot Controller"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/project_commands_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="Commands"
            android:textColor="#7986CB"
            app:cornerRadius="5dp"
            app:rippleColor="#7986CB"
            app:strokeColor="#7986CB" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/project_gui_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="GUI"
            android:textColor="#64B5F6"
            app:cornerRadius="5dp"
            app:rippleColor="#64B5F6"
            app:strokeColor="#64B5F6" />
    </LinearLayout>

</LinearLayout>

